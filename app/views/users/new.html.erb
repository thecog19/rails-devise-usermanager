<h3> Register a new user here</h3>
<%= form_for User.new, url: create_user_path do |f| %>
	<div class="form-group">
 		<label>Email address</label> <%= f.text_field(:email, class: 'form-control') %>
 	</div>
 	<div class="form-group">
 		<label>Password</label> <%= f.password_field(:password, class: 'form-control') %>
 	</div>
 	<div class="form-group">
 		<label>Password Confirmation</label> <%= f.password_field(:password_confirmation, class: 'form-control') %>
 	</div>
 	<label>Admin</label> <%= f.check_box :admin %>
 	<br>
 	<%= f.submit "Create user", class: "btn btn-primary" %>
<% end %>