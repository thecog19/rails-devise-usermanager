<h1>User List</h1>
	<%= link_to("Create User", users_new_path, :method => "get") %>
	<table class="table table-striped">
		<thead>
			<tr>
			   <th>Email</th>
			   <th>Delete</th>
			   <th>Edit</th>
			   <th>Admin?</th>
			</tr>
		<thead>
		<tbody>
			<%for user in @users %>
				<tr>
				    <td><%=user.email%></td>
				    <td><%= link_to "Delete User", admin_destroy_user_path(user), method: :delete, data: { confirm: "Are you sure you want to destroy #{user.email}? This action cannot be reversed" } %></td>
				    <td><%= link_to "Edit User", users_edit_path(user), method: :get %></td>
				    <td><%=user.admin%></td>
			  	</tr>
			<%end%>
		</tbody>
	</table>